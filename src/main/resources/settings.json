{
  "settings": {
    "analysis": {
      "char_filter": {
        "non_aln_char_removal_charfilter": {
          "type": "pattern_replace",
          "pattern": "[^\\s\\p{L}\\p{N}]",
          "replacement": ""
        }
      },
      "filter": {
        "front_ngram": {
          "type": "edge_ngram",
          "min_gram": "1",
          "max_gram": "15"
        }
      },
      "analyzer": {
        "i_prefix": {
          "char_filter": [
            "non_aln_char_removal_charfilter"
          ],
          "filter": [
            "lowercase",
            "asciifolding",
            "front_ngram"
          ],
          "tokenizer": "standard"
        },
        "q_prefix": {
          "char_filter": [
            "non_aln_char_removal_charfilter"
          ],
          "filter": [
            "lowercase",
            "asciifolding"
          ],
          "tokenizer": "standard"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "inventory_id": {
        "type": "keyword"
      },
      "data": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "prefix": {
            "type": "text",
            "analyzer": "i_prefix",
            "search_analyzer": "q_prefix"
          }
        }
      }
    }
  }
}
